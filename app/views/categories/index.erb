<div class="container">
  <h1><%=@house.name%></h1>
  <h3><%=@house.description%></h3>
  <h5><a href="/categories/<%=@house.id%>/articles/new">Sell goods or services on behalf of <%=@house.name%></a></h5>

  <img src="../imgs/House<%=@id%>.png">

  <hr>

  <p>Current goods or services for sale:</p>

  <hr>

  <% @items.each do |item| %>
    <div>
      <h4><%=item.title%></h4>
      <p><%=item.description%> </p>
      <p>Price: <%=item.price%> </p>
      <p>Contact: <%=item.email%> </p>
      <hr>
    </div>
  <% end %>

  <p><%=@catch%></p>

  <h5><a href="/">Head back to the homepage</a></h5>

</div>
